{
  "compilerOptions": {
    "lib": ["ES2020", "ES2021", "ES2022"],
    "module": "commonjs",
    "target": "es2021",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "newLine": "lf"
  },
  "include": ["./src/**/*"]
}
